<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical|left"
    android:paddingLeft="16dp"
    android:id="@+id/cont_item_root"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/im_icon_flower"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/red_flower"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/lbl_text_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Nom"
        android:maxLines="1"

        />

    <TextView
        android:id="@+id/lbl_text_days"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="38 jours"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/im_icon_del"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lbl_text_days"
        android:layout_toEndOf="@+id/lbl_text_days" />

    <ImageView
        android:id="@+id/im_icon_edit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:layout_alignTop="@+id/im_icon_del"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />
</LinearLayout >